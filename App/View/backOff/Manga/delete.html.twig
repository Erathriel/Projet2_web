{% extends "layout.html.twig" %}
{% block contenu %}
<form method="post" action="{{ path('manga.validFormDelete') }}">
<div class="row">
	
	<fieldset>
		<legend>Confirmer la suppression du manga suivant : (avec twig)</legend>
		<input name="id"  type="hidden" value="{{donnees.id}}" />
		<label>Nom : {{donnees.nom}} </label>
		<input type="hidden" id="_method" name="_method" value="delete" />

		<input type="submit" name="supprimerManga" value="Supprimer" />
	</fieldset>	
</div>
</form>
{% endblock %}
