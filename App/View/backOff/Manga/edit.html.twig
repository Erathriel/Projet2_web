{% extends "layout.html.twig" %}
{% block contenu %}
	<form method="post" action="{{ path('manga.validFormEdit') }}">
		<div class="row">

			{% if errors is defined %}
			     <div data-alert class="alert-box alert round">

			     	{% for error in errors %}
						<li>{{ error.getPropertyPath }} : {{ error.getMessage }}</li>
					{% endfor %}

            	<a href="#" class="close">&times;</a>
        		</div>
			{% endif %}

			<fieldset>
				<legend>Modifier un manga  (avec twig)</legend>
				<input name="id"  type="hidden" value="{{donnees.id}}" />
				<label>Nom :
					<input name="nom"  type="text"  size="18" value="{{donnees.nom}}" />
					{% if erreurs.nom is defined %}
						<small class="error">{{erreurs.nom}}</small>
					{% endif %}
				</label>
				<label>Type :
					<select name="typeManga_id">
						{% for typeManga in typeMangas %}
							<option value="{{ typeManga.id }}"
									{% if donnees.typeManga_id is defined and typeManga.id == donnees.typeManga_id %} selected {% endif %}>
								{{ typeManga.libelle }}
							</option>
						{% endfor %}
					</select>
					{% if erreurs.typeManga_id is defined %}
						<small class="error">{{erreurs.typeManga_id}}</small>
					{% endif %}
				</label>
				<label>Nombre d'Ã©pisode:
					<input name="nbEpisode"  type="text"  size="18" 	value="{{donnees.nbEpisode}}"/>
					{% if erreurs.nbEpisode is defined %}
						<small class="error">{{erreurs.nbEpisode}}</small>
					{% endif %}
				</label>
				<label>Prix :
					<input name="prix"  type="text"  size="18" 	value="{{donnees.prix}}"/>
					{% if erreurs.prix is defined %}
						<small class="error">{{erreurs.prix}}</small>
					{% endif %}
				</label>
				<label>Photo :
					<input name="photo"  type="text"  size="18" value="{{donnees.photo}}"/>
					{% if erreurs.photo is defined %}
						<small class="error">{{erreurs.photo}}</small>
					{% endif %}
				</label>
				<label>Dispo :
					<input name="dispo"  type="text"  size="18" 	value="{{donnees.dispo}}"/>
					{% if erreurs.dispo is defined %}
						<small class="error">{{erreurs.dispo}}</small>
					{% endif %}
				</label>
				<label>Stock:
					<input name="stock"  type="text"  size="18" 	value="{{donnees.stock}}"/>
					{% if erreurs.stock is defined %}
						<small class="error">{{erreurs.stock}}</small>
					{% endif %}
				</label>

				<input type="hidden" id="_method" name="_method" value="put" />

				<input type="submit" name="modifierManga" value="Modifier" />
			</fieldset>
		</div>
	</form>
{% endblock %}
