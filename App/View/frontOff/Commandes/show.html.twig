{% extends "layout.html.twig" %}
{% block contenu %}
    <div class="row">
        {#
            {% if   app.session.get('droit') is defined and  app.session.get('droit') == 'DROITadmin' %}
                <a href="{{ path('manga.add') }}"> Ajouter un manga </a>
            {% endif %}
        #}
        {% if data is not empty %}
                <legend>Commandes</legend>
                <table>
                    <caption>Recapitulatifs des commandes</caption>
                    <thead>
                    <tr><th>id commande</th><th>prix</th><th>date</th><th>etat</th></tr>
                    </thead>
                    <tbody>
                    {% for commande in data if data is not empty %}
                        <tr>
                            <td>{{commande.id}}</td><td>{{commande.prix}}</td><td>{{ commande.date_achat }}</td><td>{{commande.libelle}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            <a href="{{ url('manga.show') }}"><input type="submit" name="retourManga" value="Retour sur la page des ventes" /></a>
        {% else %}
            <p>Pas de commandes <a href="{{ url('manga.show') }}"><input type="submit" name="retourManga" value="Retour sur la page des ventes" /></a></p>
        {% endif %}

    </div>
{% endblock %}

